@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Segredo";
}
<h1>@ViewData["Title"]</h1>

<p>Segredo</p>

@{ 
    if(this.IfClaim(claimName: "Produtos", claimValue: "Adicionar"))
    {
        <p>Você só verá isso se tiver permissão de adicionar!</p>
    }
}

<div>
    @Html.ActionLink(linkText: "Secret", actionName: "Secret").IfClaimShow(context: Context, claimName: "Produtos", claimValue: "Adicionar");
</div>

<div>
    <br/>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow(claimName: "Produtos", claimValue: "Adicionar"))">Excluir</a>
</div>
